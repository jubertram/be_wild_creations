<div class="container">
  <div class='grid-container'>
  <% @products.each do |product| %>
    <%= link_to product_path(product) do %>
      <div class='grid-item'>
        <%= image_tag product.photo ? product.photo : product.photos.first %>
        <div><%= product.name %></div>
        <div class='price'><%= product.price.to_s.split('.')[1] == '0' ? product.price.to_i : product.price %> CAD</div>
      </div>
      <% end %>
  <% end %>
